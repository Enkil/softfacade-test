// Banner
mixin banner
    article( itemscope itemtype="http://schema.org/Product").banner
        .container.container--space-between.container--banner
            .banner__info
                p.banner__limit c 30 июня по 6 июля 2015 года
                h2(itemprop="name").banner__title Окорочка куриные охлажденные
                p(itemprop="weight").banner__weight 1 кг
            .banner__img-wrp
                img(src='img/banner-1.png' alt="Окорочка куриные охлажденные" itemprop="image").banner__img
            div(role='note' itemprop="offers" itemscope itemtype="http://schema.org/Offer").stock
                p(itemprop="price" content="129.00").stock__new-price 129
                    span.stock__new-price-cents
                        sup 00
                p.stock__old-price 129
                    span.stock__old-price-cents
                        sup 50
                p.stock__percents -20%
            // Share icons
            .share
                a(href='javascript:void(0)' title='Поделиться в ВКонтакте').share__icon.share__icon--vk
                a(href='javascript:void(0)' title='Поделиться в Одноклассниках').share__icon.share__icon--ok
                a(href='javascript:void(0)' title='Поделиться по почте').share__icon.share__icon--mail